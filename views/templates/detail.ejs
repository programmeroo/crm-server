<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <a href="/templates" class="text-blue-600 hover:text-blue-700 text-sm font-semibold">Templates</a>
                <span class="text-slate-300">/</span>
                <span class="text-slate-600 text-sm"><%= template.name %></span>
            </div>
            <h1 class="text-2xl font-bold text-slate-900"><%= template.name %></h1>
            <p class="text-sm text-slate-500 mt-1">Workspace: <strong><%= workspace.name %></strong></p>
        </div>
        <div class="flex items-center gap-3">
            <button onclick="deleteTemplate()"
                class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 text-sm font-semibold rounded-xl hover:bg-red-100 transition-all">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
            </button>
            <button onclick="saveTemplate()"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-md active:scale-95">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                </svg>
                Save Changes
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Edit Form -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                <form id="edit-form" class="space-y-6">
                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Template Name</label>
                        <input type="text" id="name" value="<%= template.name %>" required
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Type</label>
                            <select id="template_type"
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm text-slate-600">
                                <option value="html" <%= template.template_type === 'html' ? 'selected' : '' %>>HTML</option>
                                <option value="text" <%= template.template_type === 'text' ? 'selected' : '' %>>Text</option>
                                <option value="mixed" <%= template.template_type === 'mixed' ? 'selected' : '' %>>Mixed (HTML + Images)</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Subject</label>
                            <input type="text" id="subject" value="<%= template.subject || '' %>" placeholder="Email subject"
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Body</label>
                        <textarea id="body" required rows="12"
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm font-mono resize-vertical"><%= template.body %></textarea>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Preheader</label>
                        <input type="text" id="preheader" value="<%= template.preheader || '' %>" placeholder="Preview text in email client"
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Signature</label>
                        <textarea id="signature" rows="4" placeholder="Email signature..."
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm resize-vertical"><%= template.signature || '' %></textarea>
                    </div>

                    <div id="error-message" class="hidden p-4 bg-red-50 border border-red-100 text-red-600 text-sm rounded-xl font-medium"></div>
                    <div id="success-message" class="hidden p-4 bg-green-50 border border-green-100 text-green-600 text-sm rounded-xl font-medium"></div>
                </form>
            </div>
        </div>

        <!-- Sidebar: Metadata & Preview -->
        <div class="space-y-6">
            <!-- Info Card -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                <h3 class="font-bold text-slate-900 mb-4">Info</h3>
                <div class="space-y-3 text-sm">
                    <div>
                        <p class="text-xs text-slate-500 uppercase tracking-wider font-bold">Type</p>
                        <p class="text-slate-700 mt-1">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold"
                                style="<% if (template.template_type === 'html') { %>background-color: #dbeafe; color: #0369a1;<% } else if (template.template_type === 'text') { %>background-color: #f1f5f9; color: #334155;<% } else { %>background-color: #fce7f3; color: #be185d;<% } %>">
                                <%= template.template_type.toUpperCase() %>
                            </span>
                        </p>
                    </div>
                    <div class="border-t border-slate-100 pt-3">
                        <p class="text-xs text-slate-500 uppercase tracking-wider font-bold">Created</p>
                        <p class="text-slate-700 mt-1"><%= new Date(template.created_at).toLocaleDateString() %></p>
                    </div>
                    <div class="border-t border-slate-100 pt-3">
                        <p class="text-xs text-slate-500 uppercase tracking-wider font-bold">Last Updated</p>
                        <p class="text-slate-700 mt-1"><%= new Date(template.updated_at).toLocaleDateString() %></p>
                    </div>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                <h3 class="font-bold text-slate-900 mb-4">Preview</h3>
                <div class="bg-slate-50 rounded-xl p-4 border border-slate-100 max-h-96 overflow-y-auto">
                    <% if (template.subject) { %>
                        <div class="mb-3 pb-3 border-b border-slate-200">
                            <p class="text-xs text-slate-500 uppercase font-bold">Subject</p>
                            <p class="text-sm text-slate-700 mt-1"><%= template.subject %></p>
                        </div>
                    <% } %>
                    <% if (template.preheader) { %>
                        <div class="mb-3 pb-3 border-b border-slate-200">
                            <p class="text-xs text-slate-500 uppercase font-bold">Preheader</p>
                            <p class="text-sm text-slate-700 mt-1"><%= template.preheader %></p>
                        </div>
                    <% } %>
                    <div class="mb-3 pb-3 border-b border-slate-200">
                        <p class="text-xs text-slate-500 uppercase font-bold">Body</p>
                        <div class="text-sm text-slate-700 mt-2 whitespace-pre-wrap break-words">
                            <%= template.body.substring(0, 300) %>..
                        </div>
                    </div>
                    <% if (template.signature) { %>
                        <div class="pt-3">
                            <p class="text-xs text-slate-500 uppercase font-bold">Signature</p>
                            <div class="text-sm text-slate-700 mt-2 whitespace-pre-wrap break-words">
                                <%= template.signature %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const templateId = <%= template.id %>;

    async function saveTemplate() {
        const errorDiv = document.getElementById('error-message');
        const successDiv = document.getElementById('success-message');
        errorDiv.classList.add('hidden');
        successDiv.classList.add('hidden');

        const data = {
            name: document.getElementById('name').value,
            template_type: document.getElementById('template_type').value,
            subject: document.getElementById('subject').value,
            body: document.getElementById('body').value,
            preheader: document.getElementById('preheader').value,
            signature: document.getElementById('signature').value,
        };

        try {
            const res = await fetch(`/api/templates/${templateId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                successDiv.innerText = 'Template saved successfully';
                successDiv.classList.remove('hidden');
                setTimeout(() => location.reload(), 1500);
            } else {
                const result = await res.json();
                errorDiv.innerText = result.error?.message || 'Failed to save template';
                errorDiv.classList.remove('hidden');
            }
        } catch (err) {
            errorDiv.innerText = 'A network error occurred';
            errorDiv.classList.remove('hidden');
        }
    }

    async function deleteTemplate() {
        if (!confirm('Delete this template? This cannot be undone.')) return;

        try {
            const res = await fetch(`/api/templates/${templateId}`, { method: 'DELETE' });
            if (res.ok) {
                window.location.href = '/templates';
            } else {
                alert('Failed to delete template');
            }
        } catch (err) {
            alert('Error deleting template');
        }
    }
</script>
