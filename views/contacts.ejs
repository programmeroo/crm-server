<%- include('partials/header') %>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800">Contact Management</h1>
</div>

<section class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-8">
    <h2 class="text-lg font-semibold mb-4 text-slate-700">Add New Contact</h2>
    
    <form action="/contacts/add" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Full Name</label>
            <input type="text" name="name" required 
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>
        
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Email Address</label>
            <input type="email" name="email" required 
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>

        <div class="flex items-end">
            <button type="submit" 
                class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200">
                + Save Contact
            </button>
        </div>
    </form>
</section>

<section class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead class="bg-slate-50 border-b border-slate-200">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Name</th>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Email</th>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Last Contact</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                <% contacts.forEach(contact => { %>
                <tr class="hover:bg-slate-50 transition">
                    <td class="px-6 py-4 font-medium text-slate-800"><%= contact.name %></td>
                    <td class="px-6 py-4 text-slate-600"><%= contact.email %></td>
                    <td class="px-6 py-4 text-sm text-slate-400">
                        <%= new Date(contact.last_contact).toLocaleDateString() %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>

<%- include('partials/footer') %>