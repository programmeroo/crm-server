<%- include('partials/header') %>

<div class="bg-white p-8 rounded-xl shadow-sm border border-slate-200">
    <h1 class="text-3xl font-bold">Dashboard</h1>

    <% if (count !== null) { %>
        <p class="text-slate-500 mt-2">Welcome back. You have <strong><%= count %></strong> contacts in your database.</p>
        <div class="mt-6">
            <a href="/contacts" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                View Contacts
            </a>
        </div>
    <% } else { %>
        <p class="text-slate-500 mt-2">Select a workspace to get started.</p>
        <div class="mt-6">
            <a href="/workspaces" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                Manage Workspaces
            </a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
