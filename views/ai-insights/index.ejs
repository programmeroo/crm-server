<div class="space-y-6">
  <h1 class="text-3xl font-bold">AI Insights</h1>
  <p>Insights found: <%= insights.length %></p>
  <p>Can generate: <%= canGenerate %></p>

  <form method="POST" action="/ai-insights/generate">
    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded" <% if (!canGenerate) { %>disabled<% } %>>
      Generate Insights
    </button>
  </form>

  <div>
    <% if (insights.length > 0) { %>
      <h2>Your Insights:</h2>
      <ul>
        <% insights.forEach(insight => { %>
          <li><strong><%= insight.type %></strong> (<%= insight.confidence %>): <%= insight.content %></li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No insights yet</p>
    <% } %>
  </div>
</div>
