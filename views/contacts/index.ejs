<div class="space-y-6">
    <!-- Header Actions -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Contacts</h1>
            <p class="text-sm text-slate-500 mt-1">Manage your relationships across all workspaces.</p>
        </div>
        <div class="flex items-center gap-3">
            <button
                class="inline-flex items-center px-4 py-2 bg-white border border-slate-200 text-slate-700 text-sm font-semibold rounded-xl hover:bg-slate-50 transition-all shadow-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                </svg>
                Import CSV
            </button>
            <button onclick="exportContacts()"
                class="inline-flex items-center px-4 py-2 bg-white border border-slate-200 text-slate-700 text-sm font-semibold rounded-xl hover:bg-slate-50 transition-all shadow-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Export CSV
            </button>
            <button onclick="toggleModal('add-contact-modal')"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-md active:scale-95">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                New Contact
            </button>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white p-4 rounded-2xl shadow-sm border border-slate-100">
        <!-- Search Row -->
        <div class="mb-4">
            <div class="relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </span>
                <input type="text" id="search-input" placeholder="Search by name, email, phone, or company..."
                    class="block w-full pl-10 pr-3 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
            </div>
        </div>

        <!-- Filters Row -->
        <div class="flex flex-wrap items-center gap-3">
            <select id="workspace-filter"
                class="bg-slate-50 border border-slate-200 text-slate-600 text-sm rounded-xl px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">All Workspaces</option>
                <% workspaces.forEach(ws => { %>
                    <option value="<%= ws.id %>"><%= ws.name %></option>
                <% }) %>
            </select>

            <select id="list-filter"
                class="bg-slate-50 border border-slate-200 text-slate-600 text-sm rounded-xl px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">All Lists</option>
                <% allLists.forEach(list => { %>
                    <option value="<%= list.id %>" data-workspace-id="<%= list.workspace_id %>"><%= list.name %></option>
                <% }) %>
            </select>

            <button onclick="clearFilters()"
                class="inline-flex items-center px-3 py-2 text-sm text-slate-600 hover:text-slate-900 hover:bg-slate-50 rounded-xl transition-all">
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Clear Filters
            </button>

            <div class="ml-auto text-sm text-slate-500">
                <span id="filtered-count"><%= contacts.length %></span> contacts
            </div>
        </div>
    </div>

    <!-- Bulk Actions Toolbar (hidden by default) -->
    <div id="bulk-actions-toolbar" class="hidden bg-blue-50 border border-blue-200 p-4 rounded-2xl">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <span class="text-sm font-semibold text-blue-900">
                    <span id="selected-count">0</span> contacts selected
                </span>
                <div class="flex items-center gap-2">
                    <button onclick="bulkAction('email')"
                        class="inline-flex items-center px-3 py-1.5 bg-white border border-blue-300 text-blue-700 text-sm font-semibold rounded-lg hover:bg-blue-50 transition-all">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Send Email
                    </button>
                    <button onclick="bulkAction('export')"
                        class="inline-flex items-center px-3 py-1.5 bg-white border border-blue-300 text-blue-700 text-sm font-semibold rounded-lg hover:bg-blue-50 transition-all">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Export Selected
                    </button>
                    <button onclick="bulkAction('delete')"
                        class="inline-flex items-center px-3 py-1.5 bg-white border border-red-300 text-red-700 text-sm font-semibold rounded-lg hover:bg-red-50 transition-all">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                    </button>
                </div>
            </div>
            <button onclick="clearSelection()"
                class="text-sm text-slate-600 hover:text-slate-900">Cancel</button>
        </div>
    </div>

    <!-- Contact Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left" id="contacts-table">
                <thead>
                    <tr class="bg-slate-50/50 border-b border-slate-100">
                        <th class="px-4 py-4 text-center w-12">
                            <input type="checkbox" id="select-all" onchange="toggleSelectAll(this)"
                                class="rounded text-blue-600 focus:ring-blue-500 border-slate-300">
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Company</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Primary List</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Last Contact</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center">
                                <div class="max-w-xs mx-auto">
                                    <div class="w-12 h-12 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                        <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="text-slate-900 font-semibold">No contacts yet</h3>
                                    <p class="text-slate-500 text-sm mt-1">Start by adding your first contact or importing a list.</p>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% contacts.forEach(contact => { %>
                        <tr class="hover:bg-slate-50/50 transition-colors contact-row"
                            data-contact-id="<%= contact.id %>"
                            data-workspace-id="<%= contact.workspace_id || '' %>"
                            data-list-ids="<%= contact.lists.map(l => l.id).join(',') %>"
                            data-search="<%= (contact.first_name + ' ' + contact.last_name + ' ' + (contact.primary_email || '') + ' ' + (contact.primary_phone || '') + ' ' + (contact.company || '')).toLowerCase() %>">
                            <td class="px-4 py-4 text-center">
                                <input type="checkbox" class="contact-checkbox rounded text-blue-600 focus:ring-blue-500 border-slate-300"
                                    onchange="updateSelection()" data-contact-id="<%= contact.id %>">
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="h-9 w-9 flex-shrink-0 bg-blue-50 rounded-full flex items-center justify-center text-blue-600 font-bold text-xs">
                                        <%= contact.first_name ? contact.first_name[0] : '' %><%= contact.last_name ? contact.last_name[0] : '' %>
                                    </div>
                                    <a href="/contacts/<%= contact.id %>"
                                        class="text-sm font-semibold text-slate-900 hover:text-blue-600 transition-colors">
                                        <%= contact.first_name %> <%= contact.last_name %>
                                    </a>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-600">
                                <%= contact.primary_email || '-' %>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-600">
                                <%= contact.primary_phone || '-' %>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-600">
                                <%= contact.company || '-' %>
                            </td>
                            <td class="px-6 py-4">
                                <% if (contact.primaryList) { %>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-blue-100 text-blue-700">
                                        <%= contact.primaryList.name %>
                                    </span>
                                <% } else { %>
                                    <span class="text-sm text-slate-400">-</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-500">
                                <%= new Date(contact.created_on).toLocaleDateString() %>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-center gap-1">
                                    <a href="/contacts/<%= contact.id %>" title="View"
                                        class="p-2 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </a>
                                    <button onclick="editContact(<%= contact.id %>)" title="Edit"
                                        class="p-2 text-slate-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition-all">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </button>
                                    <% if (contact.primary_email) { %>
                                        <a href="mailto:<%= contact.primary_email %>" title="Send Email"
                                            class="p-2 text-slate-400 hover:text-purple-600 hover:bg-purple-50 rounded-lg transition-all">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                            </svg>
                                        </a>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 bg-slate-50/50 border-t border-slate-100 flex items-center justify-between">
            <div class="text-sm text-slate-500">
                Showing <span class="font-semibold text-slate-900" id="visible-count"><%= contacts.length %></span> of
                <span class="font-semibold text-slate-900"><%= contacts.length %></span> contacts
            </div>
            <div class="flex items-center gap-2">
                <button disabled
                    class="p-2 text-slate-400 border border-slate-200 rounded-lg bg-white disabled:opacity-50">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <button disabled
                    class="p-2 text-slate-400 border border-slate-200 rounded-lg bg-white disabled:opacity-50">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Contact Modal -->
<div id="add-contact-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title"
    role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm transition-opacity" aria-hidden="true"
            onclick="toggleModal('add-contact-modal')"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        <div class="inline-block align-bottom bg-white rounded-2xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-slate-100">
            <div class="bg-white px-8 pt-8 pb-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-slate-900" id="modal-title">New Contact</h3>
                    <button onclick="toggleModal('add-contact-modal')"
                        class="text-slate-400 hover:text-slate-600 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div id="modal-error" class="hidden mb-6 p-4 bg-red-50 border border-red-100 text-red-600 text-sm rounded-xl font-medium"></div>

                <form id="add-contact-form" class="space-y-5">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">First Name</label>
                            <input type="text" name="firstName" required
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Last Name</label>
                            <input type="text" name="lastName" required
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Email Address</label>
                        <input type="email" name="primaryEmail" required placeholder="name@example.com"
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Phone</label>
                            <input type="text" name="primaryPhone"
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Company</label>
                            <input type="text" name="company"
                                class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all text-sm">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Assign to Workspace</label>
                        <select name="workspaceId"
                            class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm text-slate-600">
                            <option value="">None (Unassigned)</option>
                            <% workspaces.forEach(ws => { %>
                                <option value="<%= ws.id %>"><%= ws.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </form>
            </div>
            <div class="bg-slate-50 px-8 py-6 flex flex-row-reverse gap-3">
                <button form="add-contact-form" type="submit" id="save-btn"
                    class="inline-flex justify-center px-6 py-2.5 bg-blue-600 text-white text-sm font-bold rounded-xl hover:bg-blue-700 transition-all shadow-md active:scale-95">
                    Save Contact
                </button>
                <button onclick="toggleModal('add-contact-modal')"
                    class="inline-flex justify-center px-6 py-2.5 bg-white border border-slate-200 text-slate-700 text-sm font-bold rounded-xl hover:bg-slate-50 transition-all">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Modal management
    function toggleModal(id) {
        const modal = document.getElementById(id);
        if (modal) {
            modal.classList.toggle('hidden');
            if (!modal.classList.contains('hidden')) {
                const errorDiv = document.getElementById('modal-error');
                if (errorDiv) errorDiv.classList.add('hidden');
            }
        }
    }

    // Add contact form submission
    const addForm = document.getElementById('add-contact-form');
    const saveBtn = document.getElementById('save-btn');
    const modalError = document.getElementById('modal-error');

    if (addForm) {
        addForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            modalError.classList.add('hidden');
            saveBtn.disabled = true;
            saveBtn.innerText = 'Saving...';

            const formData = new FormData(addForm);
            const data = Object.fromEntries(formData.entries());

            if (!data.workspaceId) delete data.workspaceId;
            else data.workspaceId = Number(data.workspaceId);

            try {
                const response = await fetch('/api/contacts', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.reload();
                } else {
                    modalError.innerText = result.error?.message || 'Failed to save contact.';
                    modalError.classList.remove('hidden');
                }
            } catch (err) {
                modalError.innerText = 'A network error occurred.';
                modalError.classList.remove('hidden');
            } finally {
                saveBtn.disabled = false;
                saveBtn.innerText = 'Save Contact';
            }
        });
    }

    // Filtering
    const searchInput = document.getElementById('search-input');
    const workspaceFilter = document.getElementById('workspace-filter');
    const listFilter = document.getElementById('list-filter');

    function updateListDropdown() {
        const selectedWorkspaceId = workspaceFilter.value;

        // Get all lists and group by workspace
        const allListOptions = Array.from(document.querySelectorAll('#list-filter option')).slice(1); // Skip "All Lists"
        allListOptions.forEach(option => {
            const workspaceId = option.dataset.workspaceId;
            if (!selectedWorkspaceId) {
                option.style.display = '';
            } else {
                option.style.display = workspaceId === selectedWorkspaceId ? '' : 'none';
            }
        });

        // If current selection is hidden, reset to "All Lists"
        if (listFilter.value && Array.from(listFilter.options).find(o => o.value === listFilter.value)?.style.display === 'none') {
            listFilter.value = '';
        }
    }

    function applyFilters() {
        const searchTerm = searchInput.value.toLowerCase();
        const workspaceId = workspaceFilter.value;
        const listId = listFilter.value;

        const rows = document.querySelectorAll('.contact-row');
        let visibleCount = 0;

        rows.forEach(row => {
            const searchData = row.dataset.search;
            const rowWorkspaceId = row.dataset.workspaceId;
            const rowListIds = row.dataset.listIds ? row.dataset.listIds.split(',').filter(id => id) : [];

            let show = true;

            if (searchTerm && !searchData.includes(searchTerm)) {
                show = false;
            }

            if (workspaceId && rowWorkspaceId !== workspaceId) {
                show = false;
            }

            if (listId && !rowListIds.includes(listId)) {
                show = false;
            }

            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });

        document.getElementById('visible-count').textContent = visibleCount;
        document.getElementById('filtered-count').textContent = visibleCount;
    }

    searchInput.addEventListener('input', applyFilters);
    workspaceFilter.addEventListener('change', () => {
        updateListDropdown();
        applyFilters();
    });
    listFilter.addEventListener('change', applyFilters);

    function clearFilters() {
        searchInput.value = '';
        workspaceFilter.value = '';
        listFilter.value = '';
        updateListDropdown();
        applyFilters();
    }

    // Selection management
    function toggleSelectAll(checkbox) {
        const checkboxes = document.querySelectorAll('.contact-checkbox');
        const visibleCheckboxes = Array.from(checkboxes).filter(cb => {
            const row = cb.closest('.contact-row');
            return row.style.display !== 'none';
        });

        visibleCheckboxes.forEach(cb => {
            cb.checked = checkbox.checked;
        });
        updateSelection();
    }

    function updateSelection() {
        const checkboxes = document.querySelectorAll('.contact-checkbox:checked');
        const count = checkboxes.length;

        document.getElementById('selected-count').textContent = count;

        if (count > 0) {
            document.getElementById('bulk-actions-toolbar').classList.remove('hidden');
        } else {
            document.getElementById('bulk-actions-toolbar').classList.add('hidden');
        }
    }

    function clearSelection() {
        document.querySelectorAll('.contact-checkbox').forEach(cb => cb.checked = false);
        document.getElementById('select-all').checked = false;
        updateSelection();
    }

    function getSelectedContactIds() {
        const checkboxes = document.querySelectorAll('.contact-checkbox:checked');
        return Array.from(checkboxes).map(cb => cb.dataset.contactId);
    }

    // Bulk actions
    function bulkAction(action) {
        const contactIds = getSelectedContactIds();

        if (action === 'email') {
            alert('Email functionality coming soon!');
        } else if (action === 'export') {
            alert('Export selected contacts functionality coming soon!');
        } else if (action === 'delete') {
            if (confirm(`Are you sure you want to delete ${contactIds.length} contacts?`)) {
                alert('Bulk delete functionality coming soon!');
            }
        }
    }

    // Individual actions
    function editContact(contactId) {
        window.location.href = `/contacts/${contactId}`;
    }

    function exportContacts() {
        alert('Export all contacts functionality coming soon!');
    }
</script>
