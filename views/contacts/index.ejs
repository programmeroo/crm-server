<%- include('../partials/header') %>

<div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-slate-800">Contacts</h1>
    <form action="/contacts" method="GET" class="flex gap-2">
        <input type="text" name="search" value="<%= search %>" placeholder="Search contacts..."
            class="px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        <button type="submit"
            class="bg-slate-100 text-slate-700 px-4 py-2 rounded-lg hover:bg-slate-200 transition">
            Search
        </button>
        <% if (search) { %>
            <a href="/contacts" class="bg-slate-100 text-slate-500 px-4 py-2 rounded-lg hover:bg-slate-200 transition">Clear</a>
        <% } %>
    </form>
</div>

<section class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-8">
    <h2 class="text-lg font-semibold mb-4 text-slate-700">Add New Contact</h2>

    <form action="/contacts/add" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">First Name *</label>
            <input type="text" name="first_name" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>

        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Last Name</label>
            <input type="text" name="last_name"
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>

        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Company</label>
            <input type="text" name="company"
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>

        <div class="flex items-end">
            <button type="submit"
                class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200">
                + Add Contact
            </button>
        </div>
    </form>
</section>

<section class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
    <% if (contacts.length === 0) { %>
        <div class="p-8 text-center text-slate-400">
            <% if (search) { %>
                No contacts match "<%= search %>".
            <% } else { %>
                No contacts yet. Add your first contact above.
            <% } %>
        </div>
    <% } else { %>
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead class="bg-slate-50 border-b border-slate-200">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Name</th>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Company</th>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase">Last Contact</th>
                    <th class="px-6 py-4 text-sm font-semibold text-slate-600 uppercase text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                <% contacts.forEach(contact => { %>
                <tr class="hover:bg-slate-50 transition">
                    <td class="px-6 py-4 font-medium text-slate-800">
                        <%= contact.first_name %><% if (contact.last_name) { %> <%= contact.last_name %><% } %>
                    </td>
                    <td class="px-6 py-4 text-slate-600"><%= contact.company || '—' %></td>
                    <td class="px-6 py-4 text-sm text-slate-400">
                        <% if (contact.last_contact_at) { %>
                            <%= new Date(contact.last_contact_at).toLocaleDateString() %>
                        <% } else { %>
                            —
                        <% } %>
                    </td>
                    <td class="px-6 py-4 text-right space-x-2">
                        <a href="/contacts/edit/<%= contact.id %>"
                            class="text-blue-600 hover:text-blue-800 text-sm font-medium">Edit</a>
                        <form action="/contacts/delete/<%= contact.id %>" method="POST" class="inline"
                            onsubmit="return confirm('Delete this contact?')">
                            <button type="submit"
                                class="text-red-500 hover:text-red-700 text-sm font-medium">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } %>
</section>

<%- include('../partials/footer') %>
