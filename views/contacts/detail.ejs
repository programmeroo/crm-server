<script>
    function toggleModal(id) {
        const modal = document.getElementById(id);
        if (modal) {
            modal.classList.toggle('hidden');
            if (!modal.classList.contains('hidden')) {
                const errorDiv = document.getElementById('edit-modal-error');
                if (errorDiv) errorDiv.classList.add('hidden');
            }
        }
    }

    const editForm = document.getElementById('edit-contact-form');
    const editSaveBtn = document.getElementById('edit-save-btn');
    const editModalError = document.getElementById('edit-modal-error');

    if (editForm) {
        editForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            editModalError.classList.add('hidden');
            editSaveBtn.disabled = true;
            editSaveBtn.innerText = 'Saving...';

            const formData = new FormData(editForm);
            const data = Object.fromEntries(formData.entries());

            // Handle empty fields and numbers
            if (!data.workspaceId) data.workspaceId = null;
            else data.workspaceId = Number(data.workspaceId);

            try {
                const response = await fetch('/api/contacts/<%= contact.id %>', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.reload();
                } else {
                    editModalError.innerText = result.error?.message || 'Failed to update contact.';
                    editModalError.classList.remove('hidden');
                }
            } catch (err) {
                editModalError.innerText = 'A network error occurred.';
                editModalError.classList.remove('hidden');
            } finally {
                editSaveBtn.disabled = false;
                editSaveBtn.innerText = 'Save Changes';
            }
        });
    }

    async function deleteContact() {
        if (!confirm('Are you sure you want to delete this contact? This action cannot be undone.')) {
            return;
        }

        try {
            const response = await fetch('/api/contacts/<%= contact.id %>', {
                method: 'DELETE'
            });

            if (response.ok) {
                window.location.href = '/contacts';
            } else {
                const result = await response.json();
                alert(result.error?.message || 'Failed to delete contact.');
            }
        } catch (err) {
            alert('A network error occurred.');
        }
    }

    async function updateWorkspace() {
        const select = document.getElementById('workspace-select');
        if (!select) return;

        const workspaceId = select.value ? Number(select.value) : null;

        try {
            const response = await fetch('/api/contacts/<%= contact.id %>', {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ workspaceId })
            });

            if (response.ok) {
                window.location.reload();
            } else {
                const result = await response.json();
                alert(result.error?.message || 'Failed to update workspace assignment.');
            }
        } catch (err) {
            alert('A network error occurred.');
        }
    }

    // Add Field Definition
    const addDefinitionForm = document.getElementById('add-definition-form');
    const addDefinitionBtn = document.getElementById('add-definition-btn');
    const addDefinitionError = document.getElementById('add-definition-error');

    if (addDefinitionForm) {
        addDefinitionForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            addDefinitionError.classList.add('hidden');
            addDefinitionBtn.disabled = true;
            addDefinitionBtn.innerText = 'Creating...';

            const formData = new FormData(addDefinitionForm);
            const data = {
                fieldName: formData.get('fieldName'),
                label: formData.get('label'),
                fieldType: formData.get('fieldType'),
                workspaceId: formData.get('workspaceId') ? Number(formData.get('workspaceId')) : null,
                defaultValue: formData.get('defaultValue') || null,
                isRequired: formData.get('isRequired') ? 1 : 0
            };

            try {
                const response = await fetch('/api/custom-fields/definitions', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.reload();
                } else {
                    addDefinitionError.innerText = result.error?.message || 'Failed to create field definition.';
                    addDefinitionError.classList.remove('hidden');
                }
            } catch (err) {
                addDefinitionError.innerText = 'A network error occurred.';
                addDefinitionError.classList.remove('hidden');
            } finally {
                addDefinitionBtn.disabled = false;
                addDefinitionBtn.innerText = 'Add Field Definition';
            }
        });
    }

    // Custom Fields
    const customFieldsForm = document.getElementById('custom-fields-form');
    const customFieldsSaveBtn = document.getElementById('custom-fields-save-btn');
    const customFieldsError = document.getElementById('custom-fields-error');

    if (customFieldsForm) {
        customFieldsForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            customFieldsError.classList.add('hidden');
            customFieldsSaveBtn.disabled = true;
            customFieldsSaveBtn.innerText = 'Saving...';

            const formData = new FormData(customFieldsForm);
            const fields = [];

            for (const [key, value] of formData.entries()) {
                if (key.startsWith('field_')) {
                    const input = customFieldsForm.querySelector(`[name="${key}"]`);
                    const fieldName = input.getAttribute('data-field-name');
                    const fieldType = input.getAttribute('data-field-type');

                    fields.push({
                        fieldName,
                        fieldValue: value || null,
                        fieldType
                    });
                }
            }

            try {
                const response = await fetch('/api/custom-fields/contacts/<%= contact.id %>/fields', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ fields })
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.reload();
                } else {
                    customFieldsError.innerText = result.error?.message || 'Failed to save custom fields.';
                    customFieldsError.classList.remove('hidden');
                }
            } catch (err) {
                customFieldsError.innerText = 'A network error occurred.';
                customFieldsError.classList.remove('hidden');
            } finally {
                customFieldsSaveBtn.disabled = false;
                customFieldsSaveBtn.innerText = 'Save Fields';
            }
        });
    }

    // List Management
    async function addToList(listId) {
        try {
            const response = await fetch('/api/lists/assign', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    contactId: <%= contact.id %>,
                    listId: listId
                })
            });

            if (response.ok) {
                window.location.reload();
            } else {
                const result = await response.json();
                const errorDiv = document.getElementById('add-list-error');
                if (errorDiv) {
                    errorDiv.innerText = result.error?.message || 'Failed to add contact to list.';
                    errorDiv.classList.remove('hidden');
                }
            }
        } catch (err) {
            alert('A network error occurred.');
        }
    }

    async function removeFromList(listId) {
        if (!confirm('Remove this contact from the list?')) {
            return;
        }

        try {
            const response = await fetch('/api/lists/assign', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    contactId: <%= contact.id %>,
                    listId: listId
                })
            });

            if (response.ok) {
                window.location.reload();
            } else {
                const result = await response.json();
                alert(result.error?.message || 'Failed to remove contact from list.');
            }
        } catch (err) {
            alert('A network error occurred.');
        }
    }

    // Communication Logging
    function updateCommunicationForm() {
        const type = document.getElementById('comm-type').value;
        document.getElementById('email-fields').classList.add('hidden');
        document.getElementById('text-fields').classList.add('hidden');
        document.getElementById('call-fields').classList.add('hidden');
        document.getElementById('note-fields').classList.add('hidden');

        if (type === 'email') {
            document.getElementById('email-fields').classList.remove('hidden');
        } else if (type === 'text') {
            document.getElementById('text-fields').classList.remove('hidden');
        } else if (type === 'call') {
            document.getElementById('call-fields').classList.remove('hidden');
        } else if (type === 'note') {
            document.getElementById('note-fields').classList.remove('hidden');
        }
    }

    document.getElementById('create-todo-checkbox')?.addEventListener('change', (e) => {
        const todoFields = document.getElementById('todo-fields');
        if (e.target.checked) {
            todoFields.classList.remove('hidden');
        } else {
            todoFields.classList.add('hidden');
        }
    });

    const logCommForm = document.getElementById('log-communication-form');
    const logCommBtn = document.getElementById('log-comm-btn');

    if (logCommForm) {
        logCommForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            logCommBtn.disabled = true;
            logCommBtn.innerText = 'Logging...';

            const type = document.getElementById('comm-type').value;
            let content = {};

            if (type === 'email') {
                content = {
                    subject: logCommForm.querySelector('[name="emailSubject"]').value,
                    body: logCommForm.querySelector('[name="emailBody"]').value,
                    direction: 'outbound',
                    status: 'sent'
                };
            } else if (type === 'text') {
                content = {
                    message: logCommForm.querySelector('[name="textMessage"]').value,
                    direction: 'outbound',
                    status: 'sent'
                };
            } else if (type === 'call') {
                content = {
                    duration: parseInt(logCommForm.querySelector('[name="callDuration"]').value || '0'),
                    notes: logCommForm.querySelector('[name="callNotes"]').value
                };
            } else if (type === 'note') {
                content = {
                    text: logCommForm.querySelector('[name="noteText"]').value
                };
            }

            const data = {
                type,
                content,
                createTodo: document.getElementById('create-todo-checkbox').checked,
                todoText: logCommForm.querySelector('[name="todoText"]')?.value || null,
                todoDueDate: logCommForm.querySelector('[name="todoDueDate"]')?.value || null
            };

            try {
                const response = await fetch('/api/communication-logs/contacts/<%= contact.id %>/logs', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const result = await response.json();
                    alert(result.error?.message || 'Failed to log communication.');
                }
            } catch (err) {
                alert('A network error occurred.');
            } finally {
                logCommBtn.disabled = false;
                logCommBtn.innerText = 'Log Communication';
            }
        });
    }

    // Add Todo
    const addTodoForm = document.getElementById('add-todo-form');
    const addTodoBtn = document.getElementById('add-todo-btn');

    if (addTodoForm) {
        addTodoForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            addTodoBtn.disabled = true;
            addTodoBtn.innerText = 'Creating...';

            const data = {
                contactId: <%= contact.id %>,
                workspaceId: <%= contact.workspace_id || 'null' %>,
                text: addTodoForm.querySelector('[name="text"]').value,
                dueDate: addTodoForm.querySelector('[name="dueDate"]').value || null
            };

            try {
                const response = await fetch('/api/todos', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const result = await response.json();
                    alert(result.error?.message || 'Failed to create todo.');
                }
            } catch (err) {
                alert('A network error occurred.');
            } finally {
                addTodoBtn.disabled = false;
                addTodoBtn.innerText = 'Create Todo';
            }
        });
    }

    // Filter communications
    function filterCommunications(type) {
        const logs = document.querySelectorAll('.communication-log');
        const filterBtns = document.querySelectorAll('.filter-btn');

        // Update button styles
        filterBtns.forEach(btn => {
            btn.classList.remove('bg-blue-600', 'text-white');
            btn.classList.add('bg-slate-100', 'text-slate-700');
        });
        event.target.classList.remove('bg-slate-100', 'text-slate-700');
        event.target.classList.add('bg-blue-600', 'text-white');

        // Filter logs
        logs.forEach(log => {
            if (type === 'all' || log.getAttribute('data-type') === type) {
                log.classList.remove('hidden');
            } else {
                log.classList.add('hidden');
            }
        });
    }

    // Mark todo complete
    async function markTodoComplete(todoId) {
        try {
            const response = await fetch(`/api/todos/${todoId}/complete`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                window.location.reload();
            } else {
                alert('Failed to update todo.');
            }
        } catch (err) {
            alert('A network error occurred.');
        }
    }
</script>
