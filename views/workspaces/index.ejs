<%- include('../partials/header') %>

<div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-slate-800">Workspaces</h1>
    <a href="/workspaces/new"
       class="bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200">
        + New Workspace
    </a>
</div>

<% if (workspaces.length === 0) { %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 text-center">
        <p class="text-slate-500 mb-4">You don't have any workspaces yet.</p>
        <a href="/workspaces/new" class="text-blue-600 hover:underline font-medium">Create your first workspace</a>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% workspaces.forEach(ws => { %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
            <h2 class="text-xl font-semibold text-slate-800 mb-2"><%= ws.name %></h2>
            <% if (ws.description) { %>
                <p class="text-slate-500 text-sm mb-4"><%= ws.description %></p>
            <% } else { %>
                <p class="text-slate-400 text-sm italic mb-4">No description</p>
            <% } %>
            <div class="flex space-x-3">
                <a href="/workspaces/<%= ws.id %>/edit"
                   class="text-sm text-blue-600 hover:underline">Edit</a>
                <form action="/workspaces/<%= ws.id %>/delete" method="POST" class="inline"
                      onsubmit="return confirm('Delete this workspace?')">
                    <button type="submit" class="text-sm text-red-600 hover:underline">Delete</button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
<% } %>

<%- include('../partials/footer') %>
