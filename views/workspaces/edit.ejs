<%- include('../partials/header') %>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800">Edit Workspace</h1>
</div>

<section class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <form action="/workspaces/<%= workspace.id %>" method="POST" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Name <span class="text-red-500">*</span></label>
            <input type="text" name="name" required value="<%= workspace.name %>"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
        </div>
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Description</label>
            <textarea name="description" rows="3"
                      class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"><%= workspace.description || '' %></textarea>
        </div>
        <div class="flex space-x-3">
            <button type="submit"
                    class="bg-blue-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-200">
                Save Changes
            </button>
            <a href="/workspaces"
               class="py-2 px-6 rounded-lg border border-slate-300 text-slate-600 hover:bg-slate-50 transition duration-200">
                Cancel
            </a>
        </div>
    </form>
</section>

<%- include('../partials/footer') %>
