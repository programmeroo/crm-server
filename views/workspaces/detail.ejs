<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div class="flex items-center gap-5">
            <div
                class="h-16 w-16 bg-blue-600 text-white rounded-2xl flex items-center justify-center text-2xl font-bold shadow-lg shadow-blue-200">
                <%= workspace.name.charAt(0) %>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-slate-900">
                    <%= workspace.name %>
                </h1>
                <div class="flex items-center gap-3 mt-1">
                    <span
                        class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold bg-green-100 text-green-700 uppercase tracking-widest">Workspace
                        active</span>
                    <span class="text-sm text-slate-400 font-medium">ID: <%= workspace.id %></span>
                </div>
            </div>
        </div>
        <div class="flex items-center gap-3">
            <button
                class="inline-flex items-center px-4 py-2.5 bg-white border border-slate-200 text-slate-700 text-sm font-bold rounded-xl hover:bg-slate-50 transition-all shadow-sm">
                Settings
            </button>
            <button
                class="inline-flex items-center px-4 py-2.5 bg-blue-600 text-white text-sm font-bold rounded-xl hover:bg-blue-700 transition-all shadow-md">
                Launch Campaign
            </button>
        </div>
    </div>

    <!-- Workspace Tabs (Mock) -->
    <div class="flex items-center gap-8 border-b border-slate-100 px-2 mt-4">
        <button class="pb-4 px-1 text-sm font-bold text-blue-600 border-b-2 border-blue-600">Overview</button>
        <button class="pb-4 px-1 text-sm font-medium text-slate-400 hover:text-slate-600">Lists</button>
        <button class="pb-4 px-1 text-sm font-medium text-slate-400 hover:text-slate-600">Sequences</button>
        <button class="pb-4 px-1 text-sm font-medium text-slate-400 hover:text-slate-600">Analytics</button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Panel: Contact List -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                    <h2 class="font-bold text-slate-900">Workspace Contacts</h2>
                    <a href="/contacts" class="text-blue-600 text-xs font-bold hover:underline">Manage All</a>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-slate-50/10 border-b border-slate-50">
                            <tr>
                                <th class="px-6 py-3 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                    Name</th>
                                <th class="px-6 py-3 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                    Email</th>
                                <th
                                    class="px-6 py-3 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                                    Added</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-50">
                            <% if (contacts.length===0) { %>
                                <tr>
                                    <td colspan="3" class="px-6 py-10 text-center text-slate-400 italic text-sm">
                                        No contacts assigned to this workspace yet.
                                    </td>
                                </tr>
                                <% } %>
                                    <% contacts.forEach(contact=> { %>
                                        <tr class="hover:bg-slate-50/30 transition-colors">
                                            <td class="px-6 py-4">
                                                <a href="/contacts/<%= contact.id %>"
                                                    class="text-sm font-semibold text-slate-900 hover:text-blue-600">
                                                    <%= contact.first_name %>
                                                        <%= contact.last_name %>
                                                </a>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-slate-500">
                                                <%= contact.primary_email %>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-slate-400 text-right">
                                                <%= new Date(contact.created_on).toLocaleDateString() %>
                                            </td>
                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar: Info & Lists -->
        <div class="space-y-6">
            <!-- Active Lists -->
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-bold text-slate-900">Active Lists</h3>
                    <button onclick="toggleModal('create-list-modal')" class="text-blue-600 font-bold text-xs hover:underline">New List</button>
                </div>
                <div class="space-y-3" id="lists-container">
                    <% if (lists.length===0) { %>
                        <div class="text-xs text-slate-400 italic py-2" id="no-lists-message">No lists defined for this brand.</div>
                        <% } %>
                            <% lists.forEach(list=> { %>
                                <div
                                    class="flex items-center justify-between p-3 bg-slate-50 rounded-xl border border-slate-100 group hover:border-blue-200 transition-all">
                                    <div class="flex items-center gap-3">
                                        <div class="w-2 h-2 rounded-full bg-slate-300"></div>
                                        <span class="text-sm font-semibold text-slate-700 group-hover:text-blue-600">
                                            <%= list.name %>
                                        </span>
                                    </div>
                                    <button onclick="deleteList(<%= list.id %>, '<%= list.name %>')" class="text-red-400 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                                <% }) %>
                </div>
            </div>

            <!-- Workspace Stats -->
            <div class="bg-slate-900 p-6 rounded-2xl shadow-xl shadow-slate-200 border border-slate-800 text-white">
                <h3 class="font-bold mb-4 flex items-center gap-2">
                    <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                        <path
                            d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z">
                        </path>
                    </svg>
                    Performance
                </h3>
                <div class="space-y-4">
                    <div class="flex justify-between items-center">
                        <span class="text-[11px] font-bold text-slate-400 uppercase tracking-widest">Total Reach</span>
                        <span class="text-lg font-bold">
                            <%= contacts.length %>
                        </span>
                    </div>
                    <div class="h-1 w-full bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-blue-500 rounded-full" style="width: 45%"></div>
                    </div>
                    <p class="text-[10px] text-slate-500 italic">45% increase in engagement since last month.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create List Modal -->
<div id="create-list-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full mx-4">
        <div class="px-6 py-5 border-b border-slate-100">
            <h3 class="text-xl font-bold text-slate-900">Create New List</h3>
            <p class="text-sm text-slate-500 mt-1">Add a new contact list to this workspace</p>
        </div>
        <div class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">List Name</label>
                <input type="text" id="list-name-input" placeholder="e.g., Leads, Prospects, Customers"
                    class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <p class="text-xs text-slate-500 italic">Contacts can belong to multiple lists. When a contact joins a workspace list for the first time, that list becomes their primary for this workspace.</p>
        </div>
        <div class="px-6 py-4 bg-slate-50 rounded-b-2xl flex justify-end gap-3">
            <button onclick="toggleModal('create-list-modal')"
                class="px-4 py-2 text-sm font-bold text-slate-600 hover:text-slate-800">Cancel</button>
            <button onclick="createList()"
                class="px-4 py-2 bg-blue-600 text-white text-sm font-bold rounded-xl hover:bg-blue-700">Create List</button>
        </div>
    </div>
</div>

<script>
    function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.classList.toggle('hidden');
        if (!modal.classList.contains('hidden') && modalId === 'create-list-modal') {
            document.getElementById('list-name-input').value = '';
            document.getElementById('list-name-input').focus();
        }
    }

    async function createList() {
        const name = document.getElementById('list-name-input').value.trim();

        if (!name) {
            alert('Please enter a list name');
            return;
        }

        try {
            const response = await fetch('/api/lists', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    workspaceId: <%= workspace.id %>,
                    name: name
                })
            });

            const result = await response.json();

            if (response.ok) {
                toggleModal('create-list-modal');
                window.location.reload();
            } else {
                alert(result.error?.message || 'Failed to create list');
            }
        } catch (error) {
            console.error('Error creating list:', error);
            alert('Failed to create list');
        }
    }

    async function deleteList(listId, listName) {
        if (!confirm(`Are you sure you want to delete the list "${listName}"? This will remove all contact assignments from this list.`)) {
            return;
        }

        try {
            const response = await fetch(`/api/lists/${listId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });

            const result = await response.json();

            if (response.ok) {
                window.location.reload();
            } else {
                alert(result.error?.message || 'Failed to delete list');
            }
        } catch (error) {
            console.error('Error deleting list:', error);
            alert('Failed to delete list');
        }
    }
</script>